      <!-- Utilisation d'une table avec Bootstrap -->
      <table class="table table-striped table-bordered" id="gossips_home">
        <thead>
          <tr>
            <th>Author</th>
            <th>Gossip</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @gossips.each_with_index do |gossip, index| %>
            <tr>
              <td><%= gossip.author %></td>
              <td><%= gossip.content %></td>
              <td><%= link_to "Take a look", gossips_show_path(index + 1), class: "btn btn-primary" %></td>

            </tr>
          <% end %>
        </tbody>
      </table>