<% render 'layouts/header'%>

<body class="d-flex flex-column h-100 bg-light">
        <main class="flex-shrink-0">
            <!-- Navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
                <div class="container px-5">
                <a class="navbar-brand" href="<%= root_path %>"><span class="fw-bolder text-primary">Gossips</span></a>


                    <%= render 'layouts/navbar'%>

                </div>
            </nav>

    <div class="container px-5 my-5">

      <%= form_with(model: @gossip, url: gossip_path(@gossip), method: :patch, local: true) do |form| %>
        <div class="form-group">
          <%= form.label :author, "Auteur :" %>
          <%= form.text_field :author, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :content, "Contenu :" %>
          <%= form.text_area :content, rows: 4, class: "form-control" %>
        </div>
        <%= form.submit "Modifier", class: "btn btn-primary" %>
      <% end %>

      </div>

  </main>
      <% render 'layouts/footer'%>